<h1>Movies Search</h1>
<%= form_for search_path, method: :get, html: {class: "form-inline"} do |f| %>
  <div class="form-group">
    <%= f.label "Search for" %>
    <%= text_field_tag :q, nil, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= submit_tag "Go", name: nil, class: "btn btn-success" %>
  </div>
<% end %>
<ul>
  <% @movies.each do |movie| %>
    <li>
      <h3>
        <%= link_to movie.title, movie_path(movie) %>
      </h3>
    </li>
  <% end %>
</ul>
